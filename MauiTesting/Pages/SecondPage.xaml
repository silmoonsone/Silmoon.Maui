<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTesting.Pages.SecondPage"
             xmlns:pages="clr-namespace:MauiTesting.Pages"
             x:DataType="pages:SecondPageViewModel"
             HideSoftInputOnTapped="True"
             Title="SecondPage">
    <VerticalStackLayout Margin="10" Spacing="10">
        <Label Text="Welcome to .NET MAUI!" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry Text="{Binding Text}" Placeholder="input some text."></Entry>
        <Button Text="Button" Command="{Binding ButtonClickedCommand}" IsEnabled="{Binding Text, Converter={StaticResource IsNotNullOrEmptyConvert}}"></Button>
    </VerticalStackLayout>
</ContentPage>